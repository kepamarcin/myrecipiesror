<%= render "shared/page_title", title: "Create new recipe" %>
<% if @recipe.errors.any? %>
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<div class="panel panel-danger">
				<div class="panel-heading">
					<h4 class="panel-title">
							<%= pluralize(@recipe.errors.count, "error") %>
							prohibited this <%= @recipe.class %> from being saved:
					</h4>
				</div>
				<div class="panel-body">
					<ul>
						<% @recipe.errors.full_messages.each do |msg| %>
							<li><%= msg %></li>
						<% end %>
					</ul>
				</div>
			</div>
		</div>
	</div>
<% end %>	

<div class="row">
	<div class="col-md-12">
		<%= form_for(@recipe, :html => {class: "form-horizontal", role: "form"}) do |f| %>

		<div class="form-group">
			<div class="control-label col-md-2">
				<%= f.label :name, "Name:" %>
			</div>
			<div class="col-md-8">
				<%= f.text_field :name, class: "form-control", placeholder: "Name", autofocus: true %>
			</div>
		</div>
		<div class="form-group">
			<div class="control-label col-md-2">
				<%= f.label :description, "Description:"  %>
			</div>
			<div class="col-md-8">
				<%= f.text_area :description, rows: 10, class: "form-control",  placeholder: "Add description" %>
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-8">
				<%= f.submit class: "btn btn-primary" %>
				<span class="pull-right">
					<%= link_to recipes_path, style:"display:flex;margin:auto 0" do %>
					<strong><small>[ Cancel and return to recipes listing ]</small></strong>
					<% end %>
				</span>
			</div>
		</div>
		
		<% end %>
		
	</div>
</div>
